{% extends 'base.html.twig' %}

{% block title %}Dossier de {{ patient.prenom }} {{ patient.nom }}{% endblock %}

{% block body %}
<div class="container py-4">

  {# HEADER PATIENT #}
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-center text-center text-md-start"
         style="background: linear-gradient(135deg, #198754, #20c997); border-radius: .5rem;">
      
      <div class="mb-3 mb-md-0 text-white">
        <h2 class="fw-bold mb-1"><i class="bi bi-person-circle"></i> {{ patient.prenom }} {{ patient.nom|upper }}</h2>
        <p class="mb-0 text-white-50">
          {% if patient.dateDeNaissance %}{{ date().diff(patient.dateDeNaissance).y }} ans{% else %}-{% endif %}
          · {{ patient.sexe ?: '-' }}
        </p>
      </div>

      <div class="d-flex flex-column flex-sm-row gap-2">
        <a href="{{ path('app_medecin_dashboard') }}" class="btn btn-outline-light">
          <i class="bi bi-arrow-left"></i> Retour
        </a>
      </div>
    </div>
  </div>

  <div class="row g-4">
    
    {# INFOS PATIENT #}
    <div class="col-lg-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-light fw-bold">
          <i class="bi bi-person-lines-fill"></i> Informations patient
        </div>
        <div class="card-body">
          <p class="mb-2"><strong>Email :</strong><br> {{ patient.email ?: '—' }}</p>
          <p class="mb-2"><strong>Téléphone :</strong><br> {{ patient.numTelephone ?: '—' }}</p>
          <p class="mb-2"><strong>Date de naissance :</strong><br> {{ patient.dateDeNaissance ? patient.dateDeNaissance|date('d/m/Y') : '—' }}</p>
          <p class="mb-2"><strong>N° Sécurité sociale :</strong><br> {{ patient.numSecu ?: '—' }}</p>
        </div>
      </div>
    </div>

    {# DOSSIER MÉDICAL #}
    <div class="col-lg-8">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-success text-white fw-bold">
          <i class="bi bi-file-medical"></i> Dossier médical
        </div>
        <div class="card-body">
          {% if patient.dossierMedical %}
            
            <p class="mb-3"><strong>Groupe sanguin :</strong>
              <span class="badge bg-danger">{{ patient.dossierMedical.groupeSanguin ? patient.dossierMedical.groupeSanguin.libelle : '-' }}</span>
            </p>

            <div class="mb-3">
              <strong>Allergies :</strong><br>
              {% if patient.dossierMedical.allergies|length %}
                {% for a in patient.dossierMedical.allergies %}
                  <span class="badge text-bg-warning">{{ a.libelle }}</span>
                {% endfor %}
              {% else %}
                <span class="text-muted">Aucune</span>
              {% endif %}
            </div>

            <div class="mb-3">
              <strong>Traitements :</strong>
              {% if patient.dossierMedical.traitements|length %}
                <ul class="list-group list-group-flush mt-2">
                  {% for t in patient.dossierMedical.traitements %}
                    <li class="list-group-item">
                      {{ t.libelle }} — 
                      <span class="badge bg-primary">{{ t.qteJour }}/j</span> 
                      <span class="badge bg-secondary">{{ t.duree }} j</span>
                    </li>
                  {% endfor %}
                </ul>
              {% else %}
                <p class="text-muted">Aucun</p>
              {% endif %}
            </div>

            <div class="mb-3">
              <strong>Notes :</strong>
              <div class="border rounded p-3 bg-light" style="min-height: 80px;">
                {{ patient.dossierMedical.notes ?: '—' }}
              </div>
            </div>

            <p class="text-muted mb-4">
              <small>
                Créé le {{ patient.dossierMedical.dateCreation|date('d/m/Y') }} · 
                Dernière MAJ {{ patient.dossierMedical.dateMaj|date('d/m/Y') }}
              </small>
            </p>

            <a href="{{ path('app_medecin_dossier_edit', { id: patient.id }) }}" class="btn btn-warning">
              <i class="bi bi-pencil-square"></i> Modifier le dossier
            </a>

          {% else %}
            <div class="alert alert-info">
              Ce patient n’a pas encore de dossier médical.
            </div>
            <a href="{{ path('app_medecin_dossier_new', { id: patient.id }) }}" class="btn btn-success">
              <i class="bi bi-plus-circle"></i> Créer le dossier
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
